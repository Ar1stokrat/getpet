@model IEnumerable<PetAdoptionPlatform.Models.News>

@{
    ViewData["Title"] = "Новини";
}

<div class="hero-container">
    <div>
        <h1>Останні новини GetPet 🐾</h1>
        <p>Дізнавайтесь про важливі події, акції та історії успіху.</p>
        @if (User.Identity.IsAuthenticated)
        {
            var user = Context.RequestServices.GetService<ApplicationDbContext>()
            .Users.Include(u => u.Role)
            .FirstOrDefault(u => u.UserName == User.Identity.Name);

            if (user != null && user.RoleId == 2)
            {
                <a asp-action="Create" class="btn btn-primary btn-lg">Додати новину</a>
            }
        }
    </div>
</div>

<div class="container news-container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card news-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content</p>
                        <p class="text-muted small">Опубліковано: @item.CreatedAt.ToShortDateString() | Автор: @item.CreatedByUser.Email</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Детальніше</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = Context.RequestServices.GetService<ApplicationDbContext>()
                            .Users.Include(u => u.Role)
                            .FirstOrDefault(u => u.UserName == User.Identity.Name);

                            if (user != null && user.RoleId == 2)
                            {
                                <div class="mt-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редагувати</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
